meta {
  name: Get Customer Details
  type: http
  seq: 3
}

get {
  url: {{credytApiUrl}}/customers/{{customerId}}
  body: none
  auth: inherit
}

script:post-response {
  if(res.status === 200){
    const responseJson = res.getBody();
  
    if (responseJson) {
      bru.setEnvVar("customerId", responseJson.id);
    }
  }
  
  
  
}

settings {
  encodeUrl: true
  timeout: 0
}
